<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>jalfry</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    <link href="/css/permissions.css" rel="stylesheet">
  </head>

  <body class="d-flex flex-column h-100">  
	  {{> header}}
<main class="flex-shrink-0">
  <div class="container">
    <h1 class="mt-5">jalfried :)</h1>
    	<h4>admin {{username}}</h4>
	<a href="/administrator/add_login" class="btn btn-primary">add login</a>
  </div>
  <br>
<table id="table" class="table table-hover">
	<thead>
		<tr>
			<th scope="col">id #</th>
			<th scope="col">domain name</th>
			<th scope="col">login url</th>
			<th scope="col">approval option</th>
		</tr>
	</thead>
	
	<tbody>
		{{#each r}}
		<tr>
			<th scope="row">{{this.id}}</td>
			<td>{{this.domain}}</td>
			<td>{{this.login_url}}</td>
			<td>{{this.approval_required}}</td>
			<td>
				<a href="/administrator/domains/{{{this.id}}}">details</a>
			</td>
			<td>
				<form action="/administrator/domains/delete" method="post">
					<input type="hidden" name="domain" value="{{{this.domain}}}">
					<input type="hidden" name="id" value={{this.id}}>
					<button type="submit">delete</button>
				</form>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>
</main>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/domains.js"></script>
      
  </body>
</html>
