<!doctype html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>jalfry</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <style>
      .bd-placeholder-img {
	font-size: 1.125rem;
	text-anchor: middle;
	-webkit-user-select: none;
	-moz-user-select: none;
	user-select: none;
      }

      @media (min-width: 768px) {
	.bd-placeholder-img-lg {
	  font-size: 3.5rem;
	}
      }
    </style>

    <link href="/css/permissions.css" rel="stylesheet">
  </head>

  <body class="d-flex flex-column h-100">  

	  {{> header}}
<main class="flex-shrink-0">
  <div class="container">
    <h1 class="mt-5">jalfried :)</h1>
	<h4>admin {{username}}</h4>
	
	<a href="/administrator/groups" class="btn btn-secondary">back to groups</a>
  </div>
  <div class="container">
	<form action="/administrator/add_group" method="post">
	  <div class="mb-3">
	    <label for="exampleInputEmail1" class="form-label">group name</label>
	    <input type="test" class="form-control" id="exampleInputEmail1" name="group_name">
	  </div>
	  
	  <table class="table">
		  <thead>
			  <tr>
				  <th scope="col"></th>
				  {{#each domain}}
				  <th scope="col">{{this}}</th>
				  {{/each}}
			  </tr>
		  </thead>

		  <tbody>
			  <tr>
				  <td>Set Permission</td>
				  {{#each domain}}
				  <td> 
					  <select class="form-select select_role" id="{{{this}}}" name="{{{this}}}">
						  <option value="">None</option>
					  </select>
				  </td>
				  {{/each}}
			  </tr>
		  </tbody>
	  </table>

	  <h6>select group members</h6>

	  {{#each row}}
	  <div class="form-check form-check-inline">
		  <input class="form-check-input" type="checkbox" id="{{{this.username}}}" name="username" value="{{{this.username}}}">
		  <label class="form-check-label" for="{{{this.username}}}">{{this.username}}</label>
	  </div>
	  {{/each}}

	  <br>
	  <br>
	  <button type="submit" class="btn btn-primary">Submit</button>
	</form>
  </div>
</main>

    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/add_group.js"></script>
      
  </body>
</html>

